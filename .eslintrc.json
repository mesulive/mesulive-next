{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "extends": [
    "next/core-web-vitals",
    "prettier",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parserOptions": {
    "project": [
      "./tsconfig.json"
    ]
  },
  "rules": {
    "comma-dangle": [
      "error",
      "only-multiline"
    ]
  },
  "overrides": [
    {
      "files": [
        "**/*.js",
        "**/*.jsx"
      ],
      "plugins": [
        "prettier"
      ],
      "extends": [
        "next/core-web-vitals",
        "prettier",
        "eslint:recommended"
      ],
      "rules": {
        "comma-dangle": [
          "error",
          "only-multiline"
        ]
      }
    }
  ]
}
